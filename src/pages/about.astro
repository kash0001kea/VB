        <script data-minify="1" defer="" src="https://verdensballetten.dk/wp-content/cache/min/1/widgets.js?ver=1763733387" data-rocket-status="executed"></script></div>
		</div>
		</div>
    </section>
    <!-- end podcast section -->


    </article>
</MainLayout>

<script>
    import { animate, inView, scroll } from 'motion';
    
    /* Parallax med tekstboks */ 
	scroll(animate(".parallaxelementUp", { y: [-20, 40] }), {
		target: document.querySelector(".parallaxelementUp"),
	});

    /* Parallax med tekstboks */ 
	scroll(animate(".parallaxelementDown", { y: [20, -40] }), {
		target: document.querySelector(".parallaxelementDown"),
	});

    /* Parallax med tekstboks */ 
	scroll(animate(".parallaxelement2", { y: [-40, 20] }), {
		target: document.querySelector(".parallaxelement2"),
	});

    /* Parallax med tekstboks */ 
	scroll(animate(".parallaxelement3", { y: [20, -40] }), {
		target: document.querySelector(".parallaxelement3"),
	});

    /* Parallax med tekstboks */ 
	scroll(animate(".parallaxelement4", { y: [-40, 20] }), {
		target: document.querySelector(".parallaxelement4"),
	});

    /* Parallax med tekstboks */ 
	scroll(animate(".parallaxelement5", { y: [0, -60] }), {
		target: document.querySelector(".parallaxelement5"),
	});


	inView( "#images1" , () =>{
	animate("#images1", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

	inView( "#images2" , () =>{
	animate("#images2", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

	inView( "#images2-1" , () =>{
	animate("#images2-1", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

	// inView( "#video2" , () =>{
	// animate("#video2", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	// })

    // scroll(animate("#video2", { opacity: [1,0] }), {
	// 	target: document.querySelector("#video2"),
	// });

	inView( "#images3" , () =>{
	animate("#images3", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

	inView( "#images4" , () =>{
	animate("#images4", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

	inView( "#podcast" , () =>{
	animate("#podcast", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

    document.addEventListener('DOMContentLoaded', () => {
    const videos = document.querySelectorAll('video');
    const images = document.querySelectorAll('img');

    // Fade in videos with a slight delay
    videos.forEach(video => {
        setTimeout(() => {
            video.classList.add('opacity-100');
        }, 900); // small delay to make fade visible
    });

    // Observe images and fade them in after a delay
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                setTimeout(() => {
                    entry.target.classList.add('opacity-100', 'translate-y-0');
                }, 600); // 1.5s delay after entering viewport
                observer.unobserve(entry.target);
            }
        });
    }, { threshold: 0.2 });

    images.forEach(img => observer.observe(img));
});


</script>