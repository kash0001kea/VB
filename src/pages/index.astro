      		</div>
			<!-- end img banner -->
		</section>
		<!-- end image section -->

		<!-- start reviews -->
		<section class="mt-30" id="review">
			<TextHeading htmlheading="h2" size="h2" stylingclasses="font-heading mb-6 font-bold mx-auto text-center">
				Anmeldelser
			</TextHeading>
			<div class="grid sm:grid-cols-1 lg:grid-cols-3 gap-8">
				<Testimonials
					text="Verdensballetten er både kulturmøde og kunstformidling."
					person="Kristeligt Dagblad"
