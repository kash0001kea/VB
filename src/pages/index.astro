---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import TextHeading from '../components/TextHeading.astro';
import TextBody from '../components/TextBody.astro';
import Card from "../components/Card.astro";
import Testimonials from "../components/Testimonials.astro";
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import { i } from "motion/react-client";
---
<MainLayout title="Verdens Balletten - Hjem">
		<!-- start hero video section -->
		<div class="w-screen mb-20 overflow-hidden ">
			<video 
				src="/images/index/hero-video.mp4" 
				autoplay 
				muted 
				loop 
				class="w-full h-full object-cover"
			></video>
		</div>
		<!-- end hero video section -->

	<article class="max-w-[360px] lg:max-w-[1200px] justify-center mx-auto lg:[&_section]:my-30">
		<!-- start short about -->
		<section class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-12 content-center place-content-between" id="verdensballetten">
			<div class="hidden lg:inline lg:relative content-center">
				<img src="/images/index/1.png" alt="Himmelbjerg" class="lg:absolute lg:top-20 lg:right-0 z-0">
				<img src="/images/index/2.png" alt="" class="lg:absolute lg:left-0 lg:bottom-20 z-1">
			</div>
			<div class="max-w-[472px] py-20  ml-auto" id="verdensballetten">
				<TextHeading htmlheading="h1" size="eyebrow" stylingclasses=" mb-6">Velkommen til VerdensBalletten</TextHeading>
				<TextHeading htmlheading="h2" size="h2" stylingclasses="font-heading text-[24px] mb-6 font-bold">Ballet, opera og klassisk musik under åben himmel.</TextHeading>
				<TextHeading htmlheading="h3" size="" stylingclasses="font-heading text-[24px] mb-6">Oplev internationale stjerner optræde i Danmarks smukkeste omgivelser i en uforglemmelig fusion af dans og natur.</TextHeading>
				<div class="flex flex-row gap:12 lg:gap-12 mt-8 items-center spacing-between">
					<a href="/forestillinger"><Button size="regular">Køb Billet</Button></a>
					<a href="/about"><Link size="regular" href="/about">Læs Mere →</Link></a>
				</div>
			</div>
				
		</section>
		<!-- end short about -->

		<!-- start upcoming performances -->
		<section class="mt-30" id="forestillinger">
			<div class="flex flex-row justify-between ">
				<div>
					<TextHeading htmlheading="h1" size="eyebrow" stylingclasses="">Udforsk vores</TextHeading>
					<TextHeading htmlheading="h2" size="h2" stylingclasses="font-heading mb-6 font-bold">Forestillinger</TextHeading>
				</div>
				<div class="hidden lg:flex-1 lg:flex items-center justify-end">
					<a href="/forestillinger"><Button variant="secondary">Se alle forestillingerne</Button></a>
				</div>
			</div>
			<div class=" overflow-x-auto ">
				<div class="flex flex-row gap-12 lg:gap-20">
					<a href="/singleview">
						<Card
							image="/images/performances/forestilling1.jpg"
							tag="Ballet"
							name="Det Kgl. Haveselskabs Have"
							location="Frederiksberg"
							date="07 Jul. 2026"
						></Card>
					</a>
		
					<Card
						image="/images/performances/forestilling2.jpg"
						tag="Opera"
						name="Sølyst"
						location="Klampenborg"
						date="08 Jul. 2026"
					></Card>
		
					<Card
						image="/images/performances/forestilling3.jpg"
						tag="Klassisk Musik"
						name="Sylt"
						location="Tyskland"
