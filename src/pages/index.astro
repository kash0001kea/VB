</MainLayout>

<script>
		/* Import af Motion One bibliotek */
	import { animate, stagger, inView, scroll } from "motion";

	// js blocks goes here
	
	/* inView animation */
	inView( ".fotoinview" , () =>{
	animate( ".fotoinview", { y: [200, 0 ], opacity:[0,1] }, { duration: 1 })
	})

	

	inView( "#verdensballetten" , () =>{
	animate( "#verdensballetten", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

	inView( "#forestillinger" , () =>{
	animate("#forestillinger", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

	inView( "#video" , () =>{
	animate( "#video", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

	inView( "#images" , () =>{
	animate( "#images", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

	inView( "#review" , () =>{
	animate( "#review", { y: [200, 0 ], opacity:[0,1] }, { duration: 1, delay: 0.3 })
	})

	
	
