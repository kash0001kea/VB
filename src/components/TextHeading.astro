---
// Henter parametrene fra Astro.props
const {
  htmlheading = "h2",
  size = "medium",
  stylingclasses = "",
} = Astro.props;
const Htmlheading = htmlheading;

const sizeClasses = {
  h1: "text-[40px] lg:text-[72px] font-heading text-green1",
  h2: "text-[32px] lg:text-[48px] font-heading text-green1",
  h3: "text-[24px] lg:text-[40px] font-heading text-green1",
  h4: "text-[18px] lg:text-[32px] font-heading text-green1",
  omh4: "text-[24px] lg:text-[32px] font-heading text-green1",
  px20: "text-[20px] lg:text-[20px] font-heading text-green1",
  eyebrow: "text-[16px] lg:text-[20px] font-body font-bold text-green2" // sm 16px lg 20px
};
---

<Htmlheading class:list={[sizeClasses[size], stylingclasses]}
  ><slot /></Htmlheading
>
