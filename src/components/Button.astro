---
// Henter parametrene fra Astro.props
const { variant= "primary", size = "regular" } = Astro.props; 
 
//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper
const buttonStyling = "btn my-2  font-body font-bold cursor-pointer";
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter 
const variantClasses = {
"primary": "px-8 py-2 bg-brown1 border-brown1 text-white shadow-none rounded-3xl transition duration-300 ease-in-out hover:bg-transparent hover:border-2 hover:border-brown2 hover:text-brown2 border-2",
"secondary": "px-8 py-2 border-2 border-brown1 text-brown1 bg-transparent shadow-none rounded-3xl transition duration-300 ease-in-out hover:bg-brown1 hover:text-white border-2"
};
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const sizeClasses = {
"regular": "px-[32px] py-[8px] text-base",
"small": "px-[32px] py-[8px] text-sm",
};
---
<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>